{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://raw.githubusercontent.com/OrcaBus/service-workflow-manager/refs/heads/main/docs/events/AnalysisRunUpdate/AnalysisRunUpdate.schema.json",
  "description": "EventBridge custom event schema for AnalysisRunUpdate events",
  "title": "AWSEvent",
  "definitions": {
    "AnalysisRunUpdate": {
      "type": "object",
      "required": ["analysisRunName", "analysis", "libraries", "status"],
      "properties": {
        "id": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "orcabusId": {
          "type": "string"
        },
        "analysisRunName": {
          "type": "string"
        },
        "analysis": {
          "$ref": "#/definitions/Analysis"
        },
        "libraries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Library"
          }
        },
        "computeEnv": {
          "type": "string"
        },
        "storageEnv": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "Library": {
      "type": "object",
      "required": ["orcabusId", "libraryId"],
      "properties": {
        "orcabusId": {
          "type": "string"
        },
        "libraryId": {
          "type": "string"
        },
        "readsets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Readset"
          }
        }
      }
    },
    "Readset": {
      "type": "object",
      "required": ["orcabusId", "rgid"],
      "properties": {
        "orcabusId": {
          "type": "string"
        },
        "rgid": {
          "type": "string"
        }
      }
    },
    "Analysis": {
      "type": "object",
      "required": ["orcabusId", "name", "version"],
      "properties": {
        "orcabusId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "source": {
      "type": "string"
    },
    "time": {
      "format": "date-time",
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "account": {
      "type": "string"
    },
    "detail-type": {
      "type": "string"
    },
    "detail": {
      "$ref": "#/definitions/AnalysisRunUpdate"
    }
  },
  "required": ["detail", "detail-type", "source"]
}
