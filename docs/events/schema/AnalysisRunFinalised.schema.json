{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://raw.githubusercontent.com/umccr/orcabus/main/docs/schemas/events/workflowmanager/AnalysisRunStateChange.schema.json",
  "description": "EventBridge custom event schema for AnalysisRunFinalised events",
  "title": "AWSEvent",
  "type": "object",
  "required": [
    "detail-type",
    "detail",
    "source"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "source": {
      "type": "string"
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string"
    },
    "account": {
      "type": "string"
    },
    "detail-type": {
      "type": "string"
    },
    "detail": {
      "$ref": "#/definitions/AnalysisRunFinalised"
    }
  },
  "definitions": {
    "AnalysisRunFinalised": {
      "type": "object",
      "required": [
        "timestamp",
        "analysisRunId",
        "analysisRunName",
        "libraries",
        "readsets",
        "storageEnv",
        "computeEnv"
      ],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "analysisRunName": {
          "type": "string"
        },
        "analysisRunId": {
          "type": "string"
        },
        "analysis": {
          "$ref": "#/definitions/Analysis"
        },
        "libraries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Library"
          }
        },
        "computeEnv": {
          "type": "string"
        },
        "storageEnv": {
          "type": "string"
        }
      }
    },
    "Library": {
      "type": "object",
      "required": [
        "libraryId",
        "orcabusId",
        "readsets"
      ],
      "properties": {
        "libraryId": {
          "type": "string"
        },
        "orcabusId": {
          "type": "string"
        },
        "readsets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Readset"
          }
        }
      }
    },
    "Readset": {
      "type": "object",
      "required": [
        "orcabusId"
      ],
      "properties": {
        "orcabusId": {
          "type": "string"
        },
        "libraryId": {
          "type": "string"
        },
        "rgid": {
          "type": "string"
        }
      }
    },
    "Analysis": {
      "type": "object",
      "required": [
        "orcabusId"
      ],
      "properties": {
        "orcabusId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}
